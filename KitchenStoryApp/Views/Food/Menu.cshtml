@model IEnumerable<KitchenStoryApp.Models.FoodModel>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodPrice)
        </td>
        <td>
            @Html.ActionLink("Select", "SelectedFood", new { Foodid = item.FoodId })
        </td>
    </tr>
}

</table>
